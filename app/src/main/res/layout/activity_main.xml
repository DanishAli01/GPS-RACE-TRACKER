
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello world" />

    <RelativeLayout
        android:id="@+id/welcome_message_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:background="#036e64"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/welcome_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Mountain Race Tracker"
            android:textColor="#ddd"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/welcome_messgae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:layout_below="@+id/welcome_title"
            android:text="Following simple setps are to follow in order to run this application:\n\n1. Press Start Button to begin race, for first time use dialoug box will pop up to request permissions for access sensor usage/file access.\n\n2. Application will start taking locations after 5 sec intervals and toast particular location.\n\n3. Press Stop button to end race, once its pressed GPX file will be written and aplication will jump to calculation activity.\n\n4. On screen timmer will display time elapsed upon stop for moment and then activity will fill.\n\n5. In Calculation activity, GPX recently written will be read, will display outputs and draw graph of altitude.\n\n6. Go Back lets user to restart race again.\n\n7. Please read instructions carefully before start.\n
            \n\n"
            android:textColor="#ddd"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnstopLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="20dp"
            android:background="#ddd"
            android:paddingLeft="35dp"
            android:paddingRight="30dp"
            android:text="STOP"
            android:textColor="#036e64" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/welcome_messgae"
            android:layout_alignParentStart="true"
            android:layout_marginStart="154dp"
            android:layout_marginTop="290dp"
            android:layout_marginBottom="29dp"
            android:text="0:00:000"
            android:textColor="#ddd"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button

            android:id="@+id/btnGetLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginRight="240dp"
            android:layout_marginBottom="20dp"
            android:background="#ddd"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="START"
            android:textColor="#036e64" />

    </RelativeLayout>







</RelativeLayout>